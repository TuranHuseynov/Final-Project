
@{
    ViewBag.Title = "AddTravel";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<header id="header_add">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-primary">Elan Yerləşdir</h2>
                <h3 class="section-subheading text-primary">Uyğun bölmələri dolduraraq elanınızı qeyd edin</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form id="contactForm" name="sentMessage" novalidate action="~/Home/AddTravel" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input class="form-control direct" type="text" placeholder="Hardan *" name="from" required data-validation-name=" bir sey yazin" required-message="Please enter your location.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control direct" type="text" placeholder="Haraya *" name="to" required data-validation-name=" " required-message="Please enter your email location.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="çıxış yeri *" name="accsess" required data-validation-name=" " required-message="Please enter your Access point.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Qiymət *" name="price" required data-validation-name=" " required-message="Please enter your phone number.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="date" placeholder="Date *" name="travel_date" required data-validation-name=" " required-message="Please enter your date">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <textarea class="form-control" placeholder="Şərtlər və Qeydlər*" name="note" required data-validation-name=" " required-message="Please enter a message."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>


                            <button class="btn btn-primary btn-xl text-uppercase" type="submit">Əlavə et</button>

                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                        </div>
                    </div>
                </form>
                <button class="btn btn-primary btn-xl text-uppercase" type="submit"><a href="/Home/Index">Geri</a></button>

            </div>
        </div>
    </div>
</header>
<div class="clearfix"></div>


<!-- Extra Items -->
<script>
    function activatePlacesSearchs() {
        var inputs = document.getElementsByClassName('direct');
        for (var item of inputs) {
            var autocomplete = new google.maps.places.Autocomplete(item);
        }
        console.log(autocomplete)
    }
</script>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA13wmwA8DoyJZayKbqZ6KdAAbsqvUQMww&libraries=places&callback=activatePlacesSearchs"></script>


